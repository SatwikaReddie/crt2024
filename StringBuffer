import java.util.*;
class HelloWorld {
    public static void main(String[] args) 
    {
        Scanner s=new Scanner(System.in);
        StringBuffer s1=new StringBuffer("Java");
        StringBuffer s2=new StringBuffer("Language");
        System.out.println(s1);
        System.out.println(s2);
        s1.append(s2);
        System.out.println(s1);
    }
}
OUTPUT:
Java
Language
JavaLanguage
